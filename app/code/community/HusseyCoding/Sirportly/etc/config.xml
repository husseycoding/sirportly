<?xml version="1.0"?>
<config>
    <modules>
        <HusseyCoding_Sirportly>
            <version>1.0.2</version>
        </HusseyCoding_Sirportly>
    </modules>
    <global>
        <helpers>
            <sirportly>
                <class>HusseyCoding_Sirportly_Helper</class>
            </sirportly>
            <checkout>
                <rewrite>
                    <data>HusseyCoding_Sirportly_Helper_CheckoutData</data>
                </rewrite>
            </checkout>
        </helpers>
        <models>
            <sirportly>
                <class>HusseyCoding_Sirportly_Model</class>
            </sirportly>
        </models>
    </global>
    <frontend>
        <routers>
            <sirportly>
                <use>standard</use>
                <args>
                    <module>HusseyCoding_Sirportly</module>
                    <frontName>sirportly</frontName>
                </args>
            </sirportly>
        </routers>
        <layout>
            <updates>
                <sirportly>
                    <file>sirportly.xml</file>
                </sirportly>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <events>
            <core_config_data_save_after>
                <observers>
                    <adminhtml_core_config_data_save_after_sirportly>
                        <class>sirportly/observer</class>
                        <method>adminhtmlCoreConfigDataSaveAfter</method>
                    </adminhtml_core_config_data_save_after_sirportly>
                </observers>
            </core_config_data_save_after>
        </events>
    </adminhtml>
</config>
